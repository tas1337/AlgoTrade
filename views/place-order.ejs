<h1><%= title %></h1>

<!-- Display current holdings -->
<h2>Your Holdings</h2>
<ul>
    <% if (holdings.length === 0) { %>
        <p>No current holdings.</p>
    <% } else { %>
        <% holdings.forEach(holding => { %>
            <li>
                Asset: <%= holding.asset_code %><br>
                Quantity: <%= holding.total_quantity %>
            </li>
        <% }) %>
    <% } %>
</ul>

<!-- Form to place an order -->
<h2>Place an Order</h2>
<form action="/place-order" method="POST">
    <label for="symbol">Select Trading Pair:</label>
    <select id="symbol" name="symbol" required>
        <% tradingPairs.forEach(pair => { %>
            <option value="<%= pair.symbol %>">
                <%= pair.symbol %> (Min: <%= pair.min_order_size %>, Max: <%= pair.max_order_size %>)
            </option>
        <% }) %>
    </select>

    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" step="0.0001" required>

    <button type="submit">Place Order</button>
</form>

<a href="/">Go back</a>
